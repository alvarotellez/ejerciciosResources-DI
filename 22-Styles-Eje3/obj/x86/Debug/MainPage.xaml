<Page
    x:Class="_22_Styles_Eje3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_22_Styles_Eje3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>

        <Style TargetType="Button">
            <Setter Property="Button.BorderBrush" Value="Pink" />
            <Setter Property="Button.FontFamily" Value="Times New Roman" />
            <Setter Property="Button.Background" Value="Bisque"/>
        </Style>
        <Style x:Key="estiloBase" TargetType="Button">
            <Setter Property="Button.BorderBrush" Value="Pink" />
            <Setter Property="Button.FontFamily" Value="Times New Roman" />
            <Setter Property="Button.Foreground" Value="RosyBrown" />
            <Setter Property="Button.Background" Value="Bisque"/>
         </Style>

        <Style x:Key="styleEje2" BasedOn="{StaticResource estiloBase}" TargetType="Button">
            <Setter Property="Button.BorderBrush" Value="Transparent" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Button.BorderBrush" Value="Orange" />
            <Setter Property="Button.Foreground" Value="Green" />
        </Style>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <Button x:ConnectionId='1' x:Name="btnNormal" Content="Boton normal" HorizontalAlignment="Center"/>
            <Button x:ConnectionId='2' x:Name="btnAnormal" Content="Boton anormal" HorizontalAlignment="Center"  Style="{StaticResource styleEje2}"/>
        </StackPanel>
    </Grid>
</Page>

